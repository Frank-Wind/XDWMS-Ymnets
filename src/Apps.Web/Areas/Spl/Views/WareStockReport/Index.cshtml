                { field: 'Name', title: '仓库名称', width: 80,sortable:true },
                { field: 'Code', title: '仓库编码', width: 80,sortable:true },
            ]]
         , onClickRow: function (index, row) {
             showLoading();
             $("#categoryName").html(row.Name);//, begin: $("#BeginDate").val(), end: $("#EndDate").val()
